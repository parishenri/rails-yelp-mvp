
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <%= simple_form_for(@restaurant) do |f| %>
        <div class="form-group">
          <%= f.input :name %>
          <%= f.input :address %>
          <%= f.input :category %>
          <%= f.input :phone_number %>
          <%= f.submit "add a restaurant", class: "btn btn-primary" %>
        </div>
      <% end %>
      </div>
  </div>
</div>

